<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.AddAnuncioActivity"
    tools:showIn="@layout/activity_add_livro">




    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/ic_menu_camera"
        android:layout_above="@+id/autor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome:"
        android:id="@+id/nome"
        android:layout_alignParentStart="false"
        android:layout_toRightOf="@+id/imageButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNome"
        android:layout_toRightOf="@id/nome"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Autor:"
        android:id="@+id/autor"
        android:layout_below="@+id/nome"
        android:layout_alignStart="@+id/nome" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/editTextAutor"
        android:layout_below="@+id/editTextNome"
        android:layout_alignStart="@+id/editTextNome"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Genero:"
        android:id="@+id/genero"
        android:layout_below="@+id/autor"
        android:layout_alignStart="@+id/autor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextGenero"
        android:layout_below="@+id/editTextAutor"
        android:layout_alignStart="@+id/editTextAutor"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Descrição:"
        android:id="@+id/descricao"
        android:layout_below="@+id/genero"
        android:layout_alignStart="@+id/autor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDescricao"
        android:layout_below="@+id/descricao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextGenero"
        android:layout_alignEnd="@+id/editTextGenero" />


</RelativeLayout>